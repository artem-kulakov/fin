%nav.navbar.navbar-expand-lg.navbar-light.bg-light.d-flex.justify-content-between
  = link_to 'FIN', root_path, class: 'navbar-brand'
  - if user_signed_in?
    %span
      %span.mr-2= current_user.name
      %span= link_to "Sign out", destroy_user_session_path, :method => :delete
  - else
    = link_to "Sign in", user_facebook_omniauth_authorize_path

- if notice
  %p#notice.alert.alert-success.alert-dismissible.fade.show
    = notice
    %button.close.close-notice{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
      %span{"aria-hidden" => "true"} ×

- if alert
  %p#alert.alert.alert-danger.alert-dismissible.fade.show
    = alert
    %button.close.close-notice{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
      %span{"aria-hidden" => "true"} ×
