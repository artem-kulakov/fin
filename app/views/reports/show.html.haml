%p#notice= notice

%p
  %b Company:
  = @report.company.name
%p
  %b Period:
  = @report.period.year
- @indicators.each do |indicator|
  %p
    %b= indicator.name
    = Value.where(indicator_id: indicator.id, report_id: @report.id).first.value
%p
  %b Currency:
  = @report.currency.name
%p
  %b Standard:
  = @report.standard.name

= link_to 'Edit', edit_report_path(@report)
\|
= link_to 'Back', reports_path
