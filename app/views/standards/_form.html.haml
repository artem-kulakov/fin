= form_for @standard do |f|
  - if @standard.errors.any?
    #error_explanation
      %h2= "#{pluralize(@standard.errors.count, "error")} prohibited this standard from being saved:"
      %ul
        - @standard.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
